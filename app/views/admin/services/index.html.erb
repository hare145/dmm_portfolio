<div class="bg-dark">
  <div class="container">
    <div class="row p-4">
      <div class="col-2 text-center text-light">
        サービス業務を追加する
      </div>
      <div class="col-7">
      </div>
      <div class="col-3">
      </div>
    </div>
  </div>
</div>

<%= form_with model: @service, url: admin_services_path, method: :post do |f| %>
  <div class="container mt-5 mb-5">
    <div class="row">
      <div class="col-3">
        <%= f.text_field :content, class: "form-control" %>
      </div>
      <div class="col-1">
        <%= f.submit "追加", class: "form-control btn btn-outline-primary" %>
      </div>
    </div>
  </div>
<% end %>


<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-4">
      <%= form_with url: admin_services_path, method: :get do |f| %>
        <div class="d-flex">
          <%= f.text_field :content, class: 'form-control' %>
          <%= button_tag type: "submit", class: "btn btn-default" do %>
            <i class="fa-solid fa-magnifying-glass"></i>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container mt-5 mb-4">
  <div class="row justify-content-center mt-1">
    <% @services.each do |service| %>
      <div class="col-2 m-1 text-center rounded bg-light-subtle border border-secondary">
        <%= link_to service.content, edit_admin_service_path(service.id), class: "small text-dark text-decoration-none" %>
      </div>
    <% end %>
  </div>
</div>