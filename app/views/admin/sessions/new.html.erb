<div class="vh-100 bg-secondary-subtle">
  <div class="container mt-5 mb-5 pt-5 pb-5 px-5">
    <div class="shadow bg-light-subtle p-5">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row form-group m-5">
          <div class="col-3">
          </div>
          <div class="col-6" >
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control-plaintext border-bottom"  %>
          </div>
          <div class="col-3">
          </div>
        </div>
      
        <div class="row form-group m-5">
          <div class="col-3">
          </div>
          <div class="col-6">
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "form-control-plaintext border-bottom" %>
          </div>
          <div class="col-3">
          </div>
        </div>
      
        <div class="row form-group m-5 pt-5">
          <div class="col-4">
          </div>
          <div class="col-4">
            <%= f.submit "Log in", class: "form-control btn btn-primary" %>
          </div>
          <div class="col-4">
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
