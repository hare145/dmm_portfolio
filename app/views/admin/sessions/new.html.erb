<div class="container mt-5 mb-5 vh-100 bg-light">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row form-group">
      <div class="col-3">
      </div>
      <div class="col-6" >
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control-plaintext border-bottom"  %>
      </div>
      <div class="col-3">
      </div>
    </div>
  
    <div class="row form-group">
      <div class="col-3">
      </div>
      <div class="col-6">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "form-control-plaintext border-bottom" %>
      </div>
      <div class="col-3">
      </div>
    </div>
  
    <div class="row form-group">
      <div class="col-3">
      </div>
      <div class="col-6">
        <%= f.submit "Log in" %>
      </div>
      <div class="col-3">
      </div>
    </div>
  <% end %>
</div>

