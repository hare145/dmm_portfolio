<div class="bg-dark">
  <div class="container">
    <div class="row p-4">
      <div class="col-2 text-center text-light">
        登録情報編集画面
      </div>
      <div class="col-10">
      </div>
    </div>
  </div>
</div>


<%=form_with model: @user, url: admin_facility_path(@user), method: :patch do |f| %>
<div class="bg_image_yellow pb-4">
  <div class="container mt-5 mb-4">
    <div class="row">
      <div class="col-4">
        <div class="container mb-4 p-2 shadow">
         <%= image_tag @user.get_profile_image(400, 500), width: '100%', height: '100%'%>
        </div>
        <div class="mb-4">
          <%= f.file_field :image, accept: "image/*" %>
        </div>
        <div class="container p-2 bg_color shadow"> 
          <div class="row justify-content-center m-4 p-2">
            <%= f.text_field :name, class: "form-control-plaintext border-secondary border-bottom border-top-0" %>
          </div>
          <div class="row justify-content-center">
            <div class="col-4 text-center h-25 m-4 p-2 fw-bold">
              提供サービス
            </div>
            <div class="col-5 text-center m-4 p-2">
            <%= link_to "サービスを選択する", admin_facility_userservice_path(@user,{user_id: @user}), class: "text-dark" %>
            </div>
          </div>
          <div class="row justify-content-center">
            <div class="col-4 text-center m-4 p-2 fw-bold">
              従業員数
            </div>
            <div class="col-5 text-center m-4 p-2">
              <%= f.select :employee, User.employee_methods.keys.map.with_index {|k, i| [I18n.t("enums.user.employee_method.#{k}"), i]}, {}, class: 'form-control-plaintext border-secondary border-bottom border-top-0' %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-1">
      </div>
      <div class="col-7">
        <div class="p-1 fw-bold">
          会計・経理関係採用サイト
        </div>
        <table class="table m-0">
          <tr>
            <th class="col-4 text-center table-warning">
              <%= f.text_field :account_soft, class: "form-control-plaintext border-secondary border-bottom border-top-0" %>
            </th>
            <td class="col-8">
              <%= f.text_area :account_reason, class: "form-control-plaintext border-secondary border-bottom border-top-0"%>
            </td>
          </tr>
          <tr>
            <th class="col-4 text-center table-warning">
              <%= f.text_field :accounting_soft, class: "form-control-plaintext border-secondary border-bottom border-top-0" %>
            </th>
            <td class="col-8">
              <%= f.text_area :accounting_reason, class: "form-control-plaintext border-secondary border-bottom border-top-0"%>
            </td>
          </tr>
          <tr>
            <th class="col-4 text-center table-warning">
              <%= f.text_field :other_soft, class: "form-control-plaintext border-secondary border-bottom border-top-0" %>
            </th>
            <td class="col-8">
              <%= f.text_area :other_reason, class: "form-control-plaintext border-secondary border-bottom border-top-0"%>
            </td>
          </tr>
        </table>
        <div class="mt-4 p-1 fw-bold">
          労務関係採用サイト
        </div>
        <table class="table m-0">
          <tr>
            <th class="col-4 text-center table-warning">
              <%= f.text_field :salary_soft, class: "form-control-plaintext border-secondary border-bottom border-top-0" %>
            </th>
            <td class="col-8">
              <%= f.text_area :salary_reason, class: "form-control-plaintext border-secondary border-bottom border-top-0"%>
            </td>
          </tr>
          <tr>
            <th class="col-4 text-center table-warning">
              <%= f.text_field :working_hours_soft, class: "form-control-plaintext border-secondary border-bottom border-top-0" %>
            </th>
            <td class="col-8">
              <%= f.text_area :working_hours_reason, class: "form-control-plaintext border-secondary border-bottom border-top-0"%>
            </td>
          </tr>
          <tr>
            <th class="col-4 text-center table-warning">
              <%= f.text_field :communication_soft, class: "form-control-plaintext border-secondary border-bottom border-top-0" %>
            </th>
            <td class="col-8">
              <%= f.text_area :communication_reason, class: "form-control-plaintext border-secondary border-bottom border-top-0"%>
            </td>
          </tr>
        </table>
        <div class="mt-4 p-1 fw-bold">
          利用者関係採用サイト
        </div>
        <table class="table m-0">
          <tr>
            <th class="col-4 text-center table-warning">
              <%= f.text_field :customer_info_soft, class: "form-control-plaintext border-secondary border-bottom border-top-0" %>
            </th>
            <td class="col-8">
              <%= f.text_area :customer_info_reason, class: "form-control-plaintext border-secondary border-bottom border-top-0"%>
            </td>
          </tr>
          <tr>
            <th class="col-4 text-center table-warning">
              <%= f.text_field :customer_deposit_soft, class: "form-control-plaintext border-secondary border-bottom border-top-0" %>
            </th>
            <td class="col-8">
              <%= f.text_area :customer_deposit_reason, class: "form-control-plaintext border-secondary border-bottom border-top-0"%>
            </td>
          </tr>
          <tr>
            <th class="col-4 text-center table-warning">
              <%= f.text_field :customer_billing_soft, class: "form-control-plaintext border-secondary border-bottom border-top-0" %>
            </th>
            <td class="col-8">
              <%= f.text_area :customer_billing_reason, class: "form-control-plaintext border-secondary border-bottom border-top-0"%>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
  
  <div class="container mt-5 mb-5 text-center">
    <div class="row d-flex justify-content-center">
      <div class="col-3 align-self-center bg-dark-subtle shadow">
          <%= f.radio_button :is_public, :false, class: "form-check-input" %>
          <%= f.label :is_public, "非公開", {value: :false, class: "form-check-label me-5", style: "display: inline-block;"} %>
          <%= f.radio_button :is_public, :true, class: "form-check-input" %>
          <%= f.label :is_public, "公開", {value: :true, class: "form-check-label", style: "display: inline-block;"} %>
      </div>
    </div>
  </div>
  
  <div class="container mt-5">
    <div class="row d-flex justify-content-center">
      <div class="col-3">
        <%=f.submit "変更保存を保存する", class: "form-control btn btn-outline-primary btn-lg" %>
      </div>
    </div>
  </div>
  <% end %>
</div>

