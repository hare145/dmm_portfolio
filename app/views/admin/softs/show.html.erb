 <div class="bg-dark">
  <div class="container">
    <div class="row p-4">
      <div class="col-2 text-center text-light">
        ソフト情報詳細
      </div>
      <div class="col-7">
      </div>
      <div class="col-3">
        <%= link_to "ソフト情報を編集する", edit_admin_soft_path %>
      </div>
    </div>
  </div>
</div>
 
 <div class="container mt-4 mb-4">
    <div class="row">
      <div class="col-4">
        <div class="container mb-4 p-2 enclosure_color">
          <%= image_tag @soft.get_logo_image(400, 500), width: '100%', height: '100%'%>
        </div>
        <div class="container p-2 enclosure_color"> 
          <div class="row justify-content-center m-4 p-2 bg-light">
            <%= @soft.company %>
          </div>
          <div class="row justify-content-center h-100">
            <div class="col-4 text-center h-25 m-4 p-2 bg-light">
              業務分類
            </div>
            <div class="col-5 text-center m-4 p-2 content_color">
                <%= @soft.work_id %>
            </div>
          </div>
          <div class="row justify-content-center">
            <div class="col-4 text-center h-25 m-4 p-2 bg-light">
              本社所在地
            </div>
            <div class="col-5 text-center m-4 p-2 content_color">
              <%= @soft.address %>
            </div>
          </div>
          <div class="row justify-content-center">
            <div class="col-4 text-center h-25 m-4 p-2 bg-light">
              創立日
            </div>
            <div class="col-5 text-center m-4 p-2 content_color">
              <%= @soft.founding %>
            </div>
          </div>
          <div class="row justify-content-center">
            <div class="col-10 text-center m-4 p-2 content_color">
              <%= @soft.url %>
            </div>
          </div>
        </div>
      </div>
      
      <div class="col-1">
      </div>
      <div class="col-7 vh-100">
        <div class="p-1 text-light bg-dark">
          このソフトの紹介文
        </div>
        <div class="h-25 enclosure_color">
          <%= @soft.introduction %>
        </div>
        
        <div class="p-1 text-light bg-dark">
          基本料金情報
        </div>
        <div class="p-1 enclosure_color">
          初回費用 <%= @soft.first_cost %>円
        </div>
        <div class="p-1 enclosure_color">
          月額 <%= @soft.month_cost %>円
        </div>
        <div class="p-1 enclosure_color">
          年額 <%= @soft.year_cost %>円
        </div>
        
        
        <div class="p-1 text-light bg-dark">
          主な機能
        </div>
        <div class="h-25 enclosure_color">
          <%= @soft.function %>
        </div>
      </div>
    </div>
  </div>

<div class="container">
  <div class="row">
    <div class="col-2">
      投稿コメント一覧(全<%= %>件)
    </div>
    <div class="col-10 mt-3 border-top border-dark">
    </div>
  </div>
</div>

<div class="container enclosure_color mt-4 mb-4">
  <% @softcomments.each do |softcomment| %>
    <div class="row">
      <% if softcomment.is_public == false %>
        <%= link_to "非公開にする", admin_soft_softcomment_path(@soft, comment_id: softcomment.id, softcomment: { is_public: true}), method: :patch %>
      <% else %>
       <%= link_to "公開する", admin_soft_softcomment_path(@soft, comment_id: softcomment.id, softcomment: {is_public: false}), method: :patch %>
      <% end %>
      <%= link_to "削除する", admin_soft_softcomment_path(@soft, comment_id: softcomment.id), method: :delete %>
      <div class="col-3">
        <%= softcomment.name %>
      </div>
    <div class="row">
      <%= softcomment.content %>
    </div>
  <% end %>
  <div class="row">
    <div class="col-10">
    </div>
    <div class="col-2">
      <%= link_to "一覧はこちら>>" %>
    </div>
  </div>
</div>