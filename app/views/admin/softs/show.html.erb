 <div class="bg-dark">
  <div class="container">
    <div class="row p-4">
      <div class="col-2 text-center text-light">
        ソフト情報詳細
      </div>
      <div class="col-7">
      </div>
      <div class="col-3">
        <%= link_to "ソフト情報を編集する", edit_admin_soft_path(@soft), class: "text-light" %>
      </div>
    </div>
  </div>
</div>
 
<div class="bg_image_blue"> 
 <div class="container mt-5 mb-4">
    <div class="row">
      <div class="col-4">
        <div class="container mb-4 p-2 shadow">
          <%= image_tag @soft.get_logo_image(400, 500), width: '100%', height: '100%' %>
        </div>
        <div class="container mt-5 p-2 bg_color shadow"> 
          <div class="row justify-content-center m-4 p-2 border-bottom border-dark">
            <%= @soft.company %>
          </div>
          <div class="row justify-content-center h-100">
            <div class="col-4 text-center h-25 m-4 p-2 fw-bold">
              業務分類
            </div>
            <div class="col-5 text-center m-4 p-2">
                <%= @soft.work.kind %>
            </div>
          </div>
          <div class="row justify-content-center">
            <div class="col-4 text-center h-25 m-4 p-2 fw-bold">
              本社所在地
            </div>
            <div class="col-5 text-center m-4 p-2">
              <%= @soft.address %>
            </div>
          </div>
          <div class="row justify-content-center">
            <div class="col-4 text-center h-25 m-4 p-2 fw-bold">
              創立日
            </div>
            <div class="col-5 text-center m-4 p-2">
              <%= @soft.founding %>
            </div>
          </div>
          <div class="row justify-content-center">
            <div class="col-10 text-center m-4 p-2">
              <%= @soft.url %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-1">
      </div>
      <div class="col-7 h-100">
        <div class="ps-1 fw-bold">
          このソフトの紹介文
        </div>
        <div class="h-25 p-2 bg-primary-subtle">
          <%= safe_join(@soft.introduction.split("\n"),tag(:br))  %>
        </div>
        
        <div class="mt-4 ps-1 fw-bold">
          基本料金情報
        </div>
        <div class="row mx-1 pt-2 pb-2 justify-content-center bg-primary-subtle">
          <div class="col-2 align-self-center">
            初回費用
          </div>
          <div class="col-2 align-self-center">
            <%= @soft.first_cost %>円
          </div>
        </div>
        <div class="row mx-1 pt-2 pb-2 justify-content-center bg-primary-subtle">
          <div class="col-2 align-self-center">
            月額 
          </div>
          <div class="col-2 align-self-center">
            <%= @soft.month_cost %>円
          </div>
        </div>
        <div class="row mx-1 pt-2 pb-2 justify-content-center bg-primary-subtle">
          <div class="col-2 align-self-center">
            年額 
          </div>
          <div class="col-2 align-self-center">
            <%= @soft.year_cost %>円
          </div>
        </div>
        <div class="mt-4 ps-1 fw-bold">
          主な機能
        </div>
        <div class="h-25 p-2 bg-primary-subtle">
          <%= safe_join(@soft.function.split("\n"),tag(:br))  %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="bg-primary-subtle">
  <div class="container bg-light">
    <div class="container pt-5">
      <div class="row mt-3">
        <div class="col-2">
          投稿コメント一覧(全<%= @softcomments.count %>件)
        </div>
        <div class="col-10 mt-2 border-top border-dark">
        </div>
      </div>
    </div>
    
    <div class="container mt-4 pt-4">
      <% @softcomments.each do |softcomment| %>
        <div class="row">
          <div class="col-3">
            <%= softcomment.name %>
          </div>
          <div class="col-5">
          </div>
          <div class="col-2">
            <% if softcomment.is_public == false %>
              <%= link_to "非公開にする", admin_soft_softcomment_path(@soft, comment_id: softcomment.id, softcomment: { is_public: true}), method: :patch %>
            <% else %>
             <%= link_to "公開する", admin_soft_softcomment_path(@soft, comment_id: softcomment.id, softcomment: {is_public: false}), method: :patch %>
            <% end %>
          </div>
          <div class="col-2">
            <%= link_to "削除する", admin_soft_softcomment_path(@soft, comment_id: softcomment.id), method: :delete %>
          </div>
        </div>
        <div class="row">
          <%= safe_join(comment.content.split("\n"),tag(:br)) %>
        </div>
      <% end %>
      <div class="row pt-2">
          <div class="col-10">
          </div>
          <div class="col-2">
            <%= link_to "一覧はこちら>>", admin_soft_softcomment_path(@soft)%>
          </div>
      </div>
    </div>  
  </div>
</div>