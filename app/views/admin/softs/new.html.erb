<div class="bg-dark">
  <div class="container">
    <div class="row p-4">
      <div class="col-2 text-center text-light">
        ソフト情報投稿画面
      </div>
      <div class="col-7">
      </div>
      <div class="col-3">
      </div>
    </div>
  </div>
</div>

<%=form_with model: @soft, url: admin_softs_path, method: :post do |f| %>
  
  <div class="container mt-4 mb-4">
    <div class="row">
      <div class="col-4">
        <div class="container mb-4 p-2 enclosure_color">
          <%= image_tag 'no_image.jpg', width: '100%', height: '100%'%>
        </div>
        <div class="mb-4">
          <%= f.file_field :image, accept: "image/*" %>
        </div>
        <div class="container p-2 enclosure_color"> 
          <div class="row justify-content-center m-4 p-2 bg-light">
            <%= f.text_field :company, placeholder: "会社名", class: "form-control-plaintext border-secondary border-bottom border-top-0" %>
          </div>
          <div class="row justify-content-center h-100">
            <div class="col-4 text-center h-25 m-4 p-2 bg-light">
              業務分類
            </div>
            <div class="col-5 text-center m-4 p-2 content_color">
                <%= f.select :work_id, options_from_collection_for_select(Work.all, :id, :kind) ,{} , class: "form-control-plaintext"%>
            </div>
          </div>
          <div class="row justify-content-center">
            <div class="col-4 text-center h-25 m-4 p-2 bg-light">
              本社所在地
            </div>
            <div class="col-5 text-center m-4 p-2 content_color">
              <%= f.text_field :address, class: "form-control-plaintext border-secondary border-bottom border-top-0" %>
            </div>
          </div>
          <div class="row justify-content-center">
            <div class="col-4 text-center h-25 m-4 p-2 bg-light">
              創立日
            </div>
            <div class="col-5 text-center m-4 p-2 content_color">
              <%= f.text_field :address, placeholder: "XXXX年",class: "form-control-plaintext border-secondary border-bottom border-top-0" %>
            </div>
          </div>
          <div class="row justify-content-center">
            <div class="col-10 text-center m-4 p-2 content_color">
              <%= f.text_field :url, placeholder: "ここにURL（例：http://example.com）を記載してください", class: "form-control-plaintext border-secondary border-bottom border-top-0 placeholder_font" %>
            </div>
          </div>
        </div>
      </div>
      
      <div class="col-1">
      </div>
      <div class="col-7 vh-100">
        <div class="p-1 text-light bg-dark">
          このソフトの紹介文
        </div>
        <div class="h-25">
          <%= f.text_area :introduction, class: "form-control border-secondary border-bottom border-top-0", style: "height:100%" %>
        </div>
        
        <div class="p-1 text-light bg-dark">
          基本料金情報
        </div>
        <div class="">
          <%= f.text_field :first_cost, placeholder: "初回費用", class: "form-control border-secondary border-bottom border-top-0"%>
        </div>
        <div class="">
          <%= f.text_field :mouth_cost, placeholder: "月額費用", class: "form-control border-secondary border-bottom border-top-0"%>
        </div>
        <div class="">
          <%= f.text_field :year_cost, placeholder: "年額費用", class: "form-control border-secondary border-bottom border-top-0"%>
        </div>
        
        <div class="p-1 text-light bg-dark">
          主な機能
        </div>
        <div class="h-25">
          <%= f.text_area :function, class: "form-control border-secondary border-bottom border-top-0", style: "height:100%" %>
        </div>
      </div>
    </div>
  </div>
  
  <div class="container mt-2 mb-5">
    <div class="row d-flex justify-content-center">
      <div class="col-4">
      </div>
      <div class="col-4">
        <%=f.submit "ソフト情報を提供する", class: "form-control btn btn-outline-primary btn-lg" %>
      </div>
      <div class="col-4">
      </div>
    </div>
  </div>
<% end %>