<div class="bg-dark">
  <div class="container">
    <div class="row p-4">
      <div class="col-2 text-center text-light">
        マイページ
      </div>
      <div class="col-7">
      </div>
      <div class="col-3 text-center">
        <%= link_to "登録情報を編集する", users_information_edit_path, class: "text-light" %>
      </div>
    </div>
  </div>
</div>

<div class="container mt-3">
  <div class="row justify-content-end">
    <div class="col-2">
      <%= link_to "お気に入り一覧へ>>", users_bookmark_path, class: "btn btn-outline-warning" %>
    </div>
  </div>
</div>

<div class="container mt-4 mb-4">
  <div class="row">
    <div class="col-4">
      <div class="container mb-4 p-2 enclosure_color">
        <%= image_tag current_user.get_profile_image(400, 500), width: '100%', height: '100%'%>
      </div>
      <div class="container p-2"> 
        <div class="row justify-content-center m-4 p-2 border-bottom border-dark">
          <%= current_user.name %>
        </div>
        <div class="row justify-content-center h-100">
          <div class="col-4 text-center h-25 m-4 p-2 ">
            提供サービス
          </div>
          <div class="col-5 text-center m-4 p-2">
            <%= current_user.service_id %>
          </div>
        </div>
        <div class="row justify-content-center">
          <div class="col-4 text-center m-4 p-2">
            従業員数
          </div>
          <div class="col-5 text-center m-4 p-2">
            <%= current_user.employee %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-1">
    </div>
    <div class="col-7">
      <div class="p-1 text-light bg-dark">
        会計・経理関係採用サイト
      </div>
      <table class="table m-0">
        <tr>
          <th class="col-4 text-center table-warning">
            <%= current_user.account_soft %>
          </th>
          <td class="col-8">
            <%if current_user.account_reason.nil? %>   
              <%= current_user.account_reason %>
            <% else %>
              <%= safe_join(current_user.account_reason.split("\n"),tag(:br)) %>
            <%end %>
          </td>
        </tr>
        <tr>
          <th class="col-4 text-center table-warning">
            <%= current_user.accounting_soft %>
          </th>
          <td class="col-8">
            <%= current_user.accounting_reason %>
          </td>
        </tr>
        <tr>
          <th class="col-4 text-center table-warning">
            <%= current_user.other_soft %>
          </th>
          <td class="col-8">
            <%= current_user.other_reason %>
          </td>
        </tr>
      </table>
      <div class="p-1 text-light bg-dark">
        労務関係採用サイト
      </div>
      <table class="table m-0">
        <tr>
          <th class="col-4 text-center table-warning">
            <%= current_user.salary_soft %>
          </th>
          <td class="col-8">
            <%= current_user.salary_reason %>
          </td>
        </tr>
        <tr>
          <th class="col-4 text-center table-warning">
            <%= current_user.working_hours_soft %>
          </th>
          <td class="col-8">
            <%= current_user.working_hours_reason %>
          </td>
        </tr>
        <tr>
          <th class="col-4 text-center table-warning">
            <%= current_user.communication_soft %>
          </th>
          <td class="col-8">
            <%if current_user.communication_reason.nil? %>   
              <%= current_user.communication_reason %>
            <% else %>
              <%= safe_join(current_user.communication_reason.split("\n"),tag(:br)) %>
            <%end %>
          </td>
        </tr>
      </table>
      <div class="p-1 text-light bg-dark">
        利用者関係採用サイト
      </div>
      <table class="table m-0">
        <tr>
          <th class="col-4 text-center table-warning">
            <%= current_user.customer_info_soft %>
          </th>
          <td class="col-8">
            <%= current_user.customer_info_reason %>
          </td>
        </tr>
        <tr>
          <th class="col-4 text-center table-warning">
            <%= current_user.customer_deposit_soft %>
          </th>
          <td class="col-8">
            <%= current_user.customer_deposit_reason %>
          </td>
        </tr>
        <tr>
          <th class="col-4 text-center table-warning">
            <%= current_user.customer_billing_soft %>
          </th>
          <td class="col-8">
            <%= current_user.customer_billing_reason %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-2">
      投稿コメント一覧(全<%= %>件)
    </div>
    <div class="col-10 border-bottom border-dark">
    </div>
  </div>
</div>

<div class="container enclosure_color mt-4 mb-4">
  <% @comments.each do |comment| %>
    <div class="row">
      <%= comment.is_public %>
      <%= comment.content %>
    </div>
  <% end %>
  <div class="row">
    <div class="col-10">
    </div>
    <div class="col-2">
      <%= link_to "一覧はこちら>>" %>
    </div>
  </div>
</div>
