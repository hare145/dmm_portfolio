<div class="container mt-5">
  <div class="row">
    <div class="col-2">
      <p>お気に入りソフト一覧</p>
    </div>
    <div class="col-10 mt-2 border-top border-dark">
      
    </div>
  </div>
</div>

<div class="bg_image_water">
  <div class="container mt-3 mb-3">
    <div class="row justify-content-center">
      <% @softmarks.each do |softmark| %>
        <div class="col-3 m-1">
          <div class="card border border-dark">
          <div class="card-body">
            <h6 class="card-title m-2"><%= link_to softmark.company, soft_path(softmark.id), class: "text-dark" %></h6>
            <h6 class="card-subtitle mt-2 mb-2 text-muted text-end"><%= Work.find(softmark.work_id).kind %></h6>
            <div class="row border_dashe m-1"></div>
            <p class="card-text mt-3 mb-3"><%= truncate("#{softmark.introduction}", length: 35, omission: "..." ) %></p>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>


<div class="container mt-5">
  <div class="row">
    <div class="col-2">
      <p>お気に入り施設情報一覧</p>
    </div>
    <div class="col-10 mt-2 border-top border-dark">
      
    </div>
  </div>
</div>

<div class="bg_image_orange">
  <div class="container mt-3 mb-3">
    <div class="row justify-content-around">
      <% @usermarks.each do |usermark| %>
        <div class="col-3 m-1">
          <div class="card" style="height: 100%, width: 100%">
            <%= image_tag usermark.get_profile_image(200, 300), class: "border" %>
            <div class="card-body m-2">
              <h6 class="card-title p-1 text-center"><%= link_to usermark.name, facility_path(usermark.id), class: "text-dark" %></h6>
              <h6 class="card-text p-2 text-center"><%= User.employees_i18n[usermark.employee] %></h6>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
