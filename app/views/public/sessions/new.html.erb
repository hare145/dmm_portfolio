<div class="container mt-5 mb-5 vh-100 bg-light">
  <%= form_with model: @user, url: user_session_path do |f| %>
    <div class="row form-group m-5">
      <div class=col-3>
      </div>
      <div class="col-6">
        <%= f.text_field :name, placeholder: "施設名", class: "form-control-plaintext border-bottom"%>
      </div>
      <div class=col-3>
      </div>
    </div>
  
    <div class="row form-group m-5">
      <div class=col-3>
      </div>
      <div class=col-6>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "form-control-plaintext border-bottom" %>
      </div>
      <div class=col-3>
      </div>
    </div>
  
    <div class="row form-group m-5">
      <div class=col-3>
      </div>
      <div class="col-6">
        <%= f.submit "Log in" %>
      </div>
      <div class=col-3>
      </div>
    </div>
  <% end %>
</div>
<div class="container">
  <div class="row">
    <div class="col-10">
    </div>
    <div class="col-2">
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>