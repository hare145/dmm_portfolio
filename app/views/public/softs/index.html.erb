      </div>
      <div class="col-8">
      </div>
      <div class="col-2">
      </div>
    </div>
  </div>
</div>


<div class="container mt-5 rounded-pill bg-dark">
  <div class="row p-3 d-flex text-center text-light">
    <spam>ソフト情報の新規登録は</span>
    <%= link_to "こちら", softs_new_path, class: "text-light" %>
    <span>から</span>
  </div>
</div>

 
 
 <div class="container mt-5">
   <div class="row">
     <div class="col-2">
       ソフト一覧
     </div>
     <div class="col-10 p-2">
       <div class="border border-dark">
       </div>
     </div>
    </div>
    <div class ="row mt-3">
      <div class="col-10">
      </div>
      <div class ="col-2">
        <%= form_with model: @softs, url: softs_path, method: :get do |f| %>
          <%= f.select :ordered, [  ['投稿が新しい順', 'new'],
                                    ['閲覧数が多い', 'view']
          ], {prompt: '選択してください' }, class: "form-select form-select-sm border border-secondary", id: "sort" %>
          <%= f.hidden_field :company, :value=> @search_soft %>
          <%= f.hidden_field :work_id, :value=> params[:work_id] %>
        <% end %>
        <script>
          $('#sort').change(function() {
          $(this).parent().submit();
        });
        </script>
      </div>
    </div>
 </div>
 
 
<div class="container mt-5 p-2 rounded enclosure_color border border-secondary">
  <div class="row justify-content-center">
    <% @works.each do |work| %>
    <div class="col-2">
      <%= link_to work.kind, softs_path( company: @search_soft, work_id: work.id) %>
    </div>
    <% end %>
  </div>
  <div>
  </div>
  <div class="row justify-content-center">
    <% @softs.each do |soft| %>
      <div class="col-3 m-1">
        <div class="card border border-dark">
        <div class="card-body">
          <h6 class="card-title"><%= link_to soft.company, soft_path(soft.id), class: "text-dark" %></h6>
          <h6 class="card-subtitle mb-2 text-muted"><%= soft.work_id %></h6>
          <div class="row border_dashe m-1"></div>
          <p class="card-text mb-3"><%= truncate("#{soft.introduction}", length: 25, omission: "..." ) %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row">
    <%= paginate @softs %>
  </div>
</div>