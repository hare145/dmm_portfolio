  <div class="bg-warning-subtle">
    <div class="container bg-light">
      <div class="container pt-5">
        <div class="row mt-3">
          <div class="col-3">
            <%= @user.name %>投稿コメント一覧(全<%= @usercomments.count %>件)
          </div>
          <div class="col-9 mt-2 border-top border-dark">
          </div>
        </div>
      </div>
      
      <div class="container">
        <% @usercomments.each do |comment| %>
          <div class="row mt-5 mx-4">
            <div class="col-3">
              <%= comment.name %>
            </div>
            <div class="col-6">
            </div>
            <div class="col-3">
              <% if user_signed_in? %>
                <% if comment.user_id == current_user.id && comment.is_public == false %>
                  <%= link_to "非公開にする", user_usercomment_path(@user, comment_id: comment.id, usercomment: { is_public: true}), method: :patch,
                              class: "m-1 btn btn-secondary btn-sm" %>
                <% end %>
              <% end %>
            </div>
          </div>
          <div class="row mx-3 p-2 bg-warning-subtle">
            <div class="col-10">
              <%= safe_join(comment.content.split("\n"),tag(:br)) %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>